<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日推荐"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/item_tag"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/item_image_u"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:banner_radius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/item_tag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:alpha="0.8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/item_name"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/item_image_u"
        app:layout_constraintLeft_toLeftOf="@id/item_image_u"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:id="@+id/item_author"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        app:layout_constraintLeft_toLeftOf="@id/item_name"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonadd"
        android:background="@drawable/add"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@id/item_image_u"
        app:layout_constraintRight_toRightOf="@id/item_image_u"/>


</androidx.constraintlayout.widget.ConstraintLayout>