<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门金曲"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/item_tag"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/item_image_u1"
        android:background="@drawable/image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_tag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_image_u2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:banner_radius="20dp"
        android:alpha="0.8"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/item_image_u2"
        android:background="@drawable/image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/item_tag"
        app:layout_constraintLeft_toRightOf="@id/item_image_u1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:banner_radius="20dp"
        android:alpha="0.8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaa"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/item_name1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/item_image_u1"
        app:layout_constraintLeft_toLeftOf="@id/item_image_u1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:id="@+id/item_author1"
        app:layout_constraintTop_toBottomOf="@id/item_name1"
        app:layout_constraintLeft_toLeftOf="@id/item_name1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaa"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/item_name2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/item_image_u2"
        app:layout_constraintLeft_toLeftOf="@id/item_image_u2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:id="@+id/item_author2"
        app:layout_constraintTop_toBottomOf="@id/item_name2"
        app:layout_constraintLeft_toLeftOf="@id/item_name2"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonadd1"
        android:background="@drawable/add"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/item_image_u1"
        app:layout_constraintRight_toRightOf="@id/item_image_u1"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonadd2"
        android:background="@drawable/add"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/item_image_u2"
        app:layout_constraintRight_toRightOf="@id/item_image_u2"/>




</androidx.constraintlayout.widget.ConstraintLayout>